extends ../../layouts/master

block extra-css

block extra-js

block content
    .card
        .header
            h2
                | ADD BRAND
        .body
            form(action='/manager/dashboard/products-manager/add-brand' method="POST")
                .row
                    .col-sm-4(style="text-align:center")
                        .dz-message
                            h4 Click to upload.
                        img#blah(src=(currentData && currentData.logo)?currentData.logo:"/admin/images/placeholder.png" alt="your image" style="width=100px; height=120px")
                        .file-field.input-field
                            .btn.btn-danger.m-t-20
                                span Browse
                                input#imgInp(type='file')
                            - if (errs && errs.logo)
                                p.text-danger.text-center.m-t-15 #{errs.logo}

                    .col-sm-6
                        b Brand Name
                        .input-group
                            span.input-group-addon
                                i.material-icons store
                            .form-line
                                input.form-control(type='text' name="name" value=(currentData && currentData.name)?currentData.name:'')
                        - if (errs && errs.name)
                            p.text-danger.text-center.m-t-15 #{errs.name}

                        b Brand Description
                        .input-group
                            .form-line
                                textarea.form-control.no-resize(rows='8' name='description')
                                    - if (currentData && currentData.description)
                                        | #{currentData.description}
                            - if (errs && errs.description)
                                p.text-danger.text-center.m-t-15 #{errs.description}

                .row
                    .col-sm-4
                    .col-sm-2
                        input.btn.btn-block.btn-primary.waves-effect(type='submit' value='SUBMIT')
                    .col-sm-2
                        button.btn.btn-block.btn-warning.waves-effect(type='reset') RESET
                    .col-sm-4
