                li
                    a.menu-toggle(href='javascript:void(0);')
                        i.material-icons assignment
                        span Forms
                    ul.ml-menu
                        li
                            a(href='javascript:void(0);') Basic Form Elements
                        li
                            a(href='javascript:void(0);') Advanced Form Elements
                        li
                            a(href='javascript:void(0);') Form Examples
                        li
