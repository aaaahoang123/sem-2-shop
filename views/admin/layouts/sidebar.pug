section
    // Left Sidebar
    aside#leftsidebar.sidebar
        // User Info
        .user-info
            .image
                img(src='/admin/images/user.png' width='48' height='48' alt='User')
            .info-container
                .name(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')= credential&&credential.account&&credential.account.length!==0?credential.account[0].username:''
                .btn-group.user-helper-dropdown
                    i.material-icons(data-toggle='dropdown' aria-haspopup='true' aria-expanded='true') keyboard_arrow_down
                    ul.dropdown-menu.pull-right
                        li
                            a(href='javascript:void(0);')
                                i.material-icons person
                                | Profile
                        li.divider(role='seperator')
                        li
                            a(href='javascript:void(0);')
                                i.material-icons group
                                | Followers
                        li
                            a(href='javascript:void(0);')
                                i.material-icons shopping_cart
                                | Sales
                        li
                            a(href='javascript:void(0);')
                                i.material-icons favorite
                                | Likes
                        li.divider(role='seperator')
                        li
                            a(href='javascript:void(0);')
                                i.material-icons input
                                | Sign Out
        // #User Info
        // Menu
        .menu
            ul.list
                li.header MAIN NAVIGATION
                li(class={'active': path === '/'})
                    a(href='/manager/dashboard')
                        i.material-icons home
                        span Home
                li(class={'active': path.includes('/web-config')})
                    a.menu-toggle(href='javascript:void(0);')
                        i.material-icons web
                        span Website Config
                    ul.ml-menu
                        li(class={'active': path === '/web-config/information'})
                            a(href='/manager/web-config/information') Information

                        li(class={'active': path === '/web-config/nav-bar'})
                            a(href='/manager/web-config/nav-bar') Nav_bar

                        li(class={'active': path === '/web-config/contact'})
                            a(href='/manager/web-config/contact') Contact

                        li(class={'active': path === '/web-config/top-category'})
                            a(href='/manager/web-config/top-category') Top-Category

                        li(class={'active': path === '/web-config/add-blog'})
                            a(href='/manager/web-config/blogs/create') Add Blog

                        li(class={'active': path === '/web-config/blogs'})
                            a(href='/manager/web-config/blogs') Blogs
                        li(class={'active': path === '/web-config/footer'})
                            a(href='/manager/web-config/footer') Footer

                li(class={'active': path.includes('/products-manager')})
                    a.menu-toggle(href='javascript:void(0);')
                        i.material-icons shop
                        span Product Manager
                    ul.ml-menu
                        li(class={'active': path === '/products-manager/categories'})
                            a(href='/manager/products-manager/categories') Categories
                        li(class={'active': path === '/products-manager/categories/create'})
                            a(href='/manager/products-manager/categories/create') Add Category
                        li(class={'active': path === '/products-manager/brands'})
                            a(href='/manager/products-manager/brands') Brands
                        li(class={'active': path === '/products-manager/add-brand'})
                            a(href='/manager/products-manager/brands/create') Add Brand
                        li(class={'active': path === '/products-manager/products'})
                            a(href='/manager/products-manager/products') Products
                        li(class={'active': path === '/products-manager/add-product'})
                            a(href='/manager/products-manager/products/create') Add Product
                li(class={'active': path.includes('/users-manager')})
                    a.menu-toggle(href='javascript:void(0);')
                        i.material-icons account_circle
                        span Customer Manager
                    ul.ml-menu
                        li(class={'active': path === '/users-manager/users'})
                            a(href='/manager/users-manager/users') Users
                        li(class={'active': path === '/users-manager/users/create'})
                            a(href='/manager/users-manager/users/create') Add User
                li(class={'active': path.includes('/orders')})
                    a.menu-toggle(href='javascript:void(0)')
                        i.material-icons shopping_cart
                        span Orders
                    ul.ml-menu
                        li(class={'active': path === '/orders'})
                            a(href='/manager/orders') Orders
                        li(class={'active': path === '/orders/create'})
                            a(href='/manager/orders/create') Add Orders
                li(class={'active': path.includes('/warehouse-manager')})
                    a.menu-toggle(href='javascript:void(0);')
                        i.material-icons store
                        span Warehouse Manager
                    ul.ml-menu
                        li(class={'active': path === '/warehouse-manager/check'})
                            a(href='/manager/warehouse-manager/check') Check
                        li(class={'active': path === '/warehouse-manager/edit'})
                            a(href='/manager/warehouse-manager/edit') Edit
                        li(class={'active': path === '/warehouse-manager/logs'})
                            a(href='/manager/warehouse-manager/logs') Logs

                li.header LABELS
                li
                    a(href='javascript:void(0);')
                        i.material-icons.col-red donut_large
                        span Important
                li
                    a(href='javascript:void(0);')
                        i.material-icons.col-amber donut_large
                        span Warning
                li
                    a(href='javascript:void(0);')
                        i.material-icons.col-light-blue donut_large
                        span Information
        // #Menu
        // Footer
        .legal
            .copyright
                | &copy; 2016 - 2017
                a(href='javascript:void(0);') AdminBSB - Material Design
                | .
            .version
                b Version:
                |  1.0.5
        // #Footer
    // #END# Left Sidebar
    // Right Sidebar
    aside#rightsidebar.right-sidebar
        ul.nav.nav-tabs.tab-nav-right(role='tablist')
            li.active(role='presentation')
                a(href='#skins' data-toggle='tab') SKINS
