extends ../layout/master

block title
    title Blog post

block append link
    link(rel='stylesheet' type='text/css' href='/client/styles/blog_single_styles.css')
    link(rel='stylesheet' type='text/css' href='/client/styles/blog_single_responsive.css')

block content
    .single_post
        .container
            .row
                .col-lg-8.offset-lg-2
                    .single_post_title #{blog.title}
                    .single_post_text !{blog.content}
block append script
    script(src='/client/js/blog_single_custom.js')
    script(src='/client/plugins/parallax-js-master/parallax.min.js')


